{
  "compilerOptions": {
    "rootDir": "./src", // server ts files
    "outDir": "./dist", // compiled js files
    "target": "ES6", // target ES version
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
